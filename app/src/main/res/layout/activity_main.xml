<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.test.tony.healthtrackerv01.activities.MainActivity">



    <ImageView
        android:id="@+id/homeID"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="40dp"
        android:tooltipText="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_home_black_24dp" />

    <ImageView
        android:id="@+id/reportID"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:tooltipText="Reports"
        android:onClick="reportHome"
        app:layout_constraintBottom_toBottomOf="@+id/homeID"
        app:layout_constraintStart_toEndOf="@+id/homeID"
        app:srcCompat="@drawable/ic_developer_board_black_24dp" />

    <ImageView
        android:id="@+id/testID"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:onClick="testHome"
        android:tooltipText="Reports"
        app:layout_constraintBottom_toBottomOf="@+id/reportID"
        app:layout_constraintStart_toEndOf="@+id/reportID"
        app:srcCompat="@mipmap/ic_test" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:tint="@android:color/white"
        app:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:drawable/ic_input_add"/>


</android.support.constraint.ConstraintLayout>
